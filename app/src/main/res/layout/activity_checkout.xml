<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- ConstraintLayout for ImageView -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="142dp"
        android:layout_height="126dp"
        android:tint="#000000"
        app:srcCompat="@drawable/whitelogo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- GridLayout for TextViews -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- TextViews -->

        <!-- Name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name "
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/nameTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start" />

        <!-- Mobile Number -->
        <TextView
            android:id="@+id/mobileNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number "
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/mobileNumberTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start" />

        <!-- Selected Date -->
        <TextView
            android:id="@+id/selectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Date "
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/selectedDateTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start" />

        <!-- Selected Time Slot -->
        <TextView
            android:id="@+id/selectedTimeSlotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Time Slot "
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/selectedTimeSlotTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start" />

        <!-- Price -->
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price "
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="start" />

    </GridLayout>

    <!-- ConstraintLayout for Button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/payButton"
            android:layout_width="114dp"
            android:layout_height="42dp"
            android:text="Pay"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
